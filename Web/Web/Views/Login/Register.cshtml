@model Web.Models.Login.RegisterModel;
<style>
    .containerr {
        width: 25%;
        margin: 0 auto;
    }
</style>
<h4 style="text-align:center">Enter your details below</h4>
<hr />
<div class="row">
    <div class="containerr">
        <form asp-controller="Login" asp-action="AddUser" method="post" role="form">
            <div class="form-group">
                <label class="control-label">User Name</label>
                <div>
                    <input asp-for="UserName" class="form-control" style="width: 300px" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Password</label>
                <div>
                    <input asp-for="Password" class="form-control" style="width: 300px" />
                </div>
            </div>
            <div class="form-group">
                <label>Re-enter password</label>
                <div>
                    <input asp-for="ReEnterPassword" class="form-control" style="width: 300px" />
                </div>
            </div>
            @{
                if (ViewBag.Error != "")
                {
                    <span style="color:red">@ViewBag.Error</span>
                }
            }
            <div class="form-group">
                <div style="text-align:center">
                    <input type="submit" class="btn btn-lg btn-info" value="Register" />
                </div>
            </div>
        </form>
    </div>
</div>
