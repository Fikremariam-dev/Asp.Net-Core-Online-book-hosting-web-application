@model Web.Models.User
<style>
    .containerr {
        width: 25%;
        margin: 0 auto;
    }
</style>
<h2 style="text-align:center">Please Log In.</h2>
<hr />
<div class="row">
    <div class="containerr">
        <form asp-controller="Login" asp-action="Login" method="post" role="form">
            <div class="form-group">
                <label>Username</label>
                <div>
                    <input asp-for="UserName" class="form-control" style="width: 300px" />
                </div>
            </div>

            <div class="form-group">
                <label>Password</label>
                <div>
                    <input asp-for="Password" class="form-control" style="width: 300px" />
                </div>
            </div>
            @{
                if (ViewBag.Message == "Wrong username or password")
                {
                    <span style=" color:red">Wrong username or password</span>
                }

            }
            <div class="form-group">
                <div style="text-align:center">
                    <input type="submit" class="btn btn-lg btn-info" value="Log in" />
                </div>
            </div>
        </form>
    </div>
</div>

